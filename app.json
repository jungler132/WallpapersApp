{
  "expo": {
    "name": "OtakuWalls",
    "slug": "OtakuWalls",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/otakuwalls_logo.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.otakuwalls.app",
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/otakuwalls_logo.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.otakuwalls.app",
      "permissions": [
        "com.google.android.gms.permission.AD_ID"
      ],
      "versionCode": 1
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          },
          "android": {
            "extraProguardRules": "-keep class com.google.android.gms.internal.consent_sdk.** { *; }"
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/otakuwalls_logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1a1a1a"
        }
      ],
      "expo-tracking-transparency",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-6203993897795010~9663906446",
          "iosAppId": "ca-app-pub-6203993897795010~9663906446",
          "delayAppMeasurementInit": true,
          "userTrackingUsageDescription": "This identifier will be used to deliver personalized ads to you."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "splash": {
      "image": "./assets/images/otakuwalls_logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    }
  }
}
